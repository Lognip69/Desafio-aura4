let Idade = prompt('Quantos anos você tem?')
let MM = Idade < 18 ? 'menor de idade' : 'maior de idade'
console.log(`Com ${Idade} anos, você é ${MM}`)

if (Idade < 18){ (Outra forma de fazer)
    console.log(`Com ${Idade} anos, você é menor de idade`)
} else{
    console.log(`Com ${Idade} anos, você é maior de idade`)
}
//--------------------------------------------------------------------
let Numero = prompt('Digite um numero e descurbiremos se é Positivo ou Negativo')
if (Numero > 0){
    console.log(`O numero digitado (${Numero}) é positivo`)
} else if(Numero == 0){
    console.log(`O numero digitado foi 0, muitos consideram posito ou um numero neutro`)
} else{
    console.log(`O numero digitado (${Numero}) é negativo`)
}
//--------------------------------------------------------------------
let Numero = 0
while (Numero != 10){
    Numero++
    console.log(Numero)
}
